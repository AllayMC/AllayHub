{
  "name": "allayhub",
  "private": true,
  "type": "module",
  "engines": {
    "bun": ">=1.3.6"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "NODE_OPTIONS=\"--max-old-space-size=8192\" nuxi build",
    "build:search": "./allayindexer build",
    "dev": "bun run build:search && nuxi dev",
    "generate": "bun run build:search && nuxi generate",
    "preview": "nuxi preview",
    "postinstall": "nuxi prepare",
    "typecheck": "nuxi typecheck",
    "lint": "eslint .",
    "format:check": "prettier --check .",
    "format": "prettier --write .",
    "check": "nuxi typecheck && eslint .",
    "fix": "eslint . --fix",
    "intl:extract": "formatjs extract \"src/{components,composables,layouts,middleware,modules,pages,plugins,utils}/**/*.{vue,ts,tsx,js,jsx,mts,cts,mjs,cjs}\" \"src/error.vue\" --ignore \"**/*.d.ts\" --ignore node_modules --out-file src/locales/en-US/index.json --format crowdin --preserve-whitespace",
    "cf-deploy": "pnpm run build && wrangler deploy --env preview",
    "cf-dev": "pnpm run build && wrangler dev --env preview",
    "cf-typegen": "wrangler types",
    "clean": "nuxi cleanup && bun run scripts/clean-node-modules.ts && cd ./indexer && cargo clean"
  },
  "devDependencies": {
    "@formatjs/cli": "^6.11.0",
    "@modrinth/tooling-config": "workspace:*",
    "@nuxtjs/i18n": "^9.5.6",
    "@prettier/plugin-xml": "^3.4.2",
    "@types/dompurify": "^3.2.0",
    "@types/iso-3166-2": "^1.0.4",
    "@types/node": "^20.19.30",
    "@types/semver": "^7.7.1",
    "autoprefixer": "^10.4.23",
    "glob": "^10.5.0",
    "nuxt": "^3.20.2",
    "postcss": "^8.5.6",
    "prettier-plugin-sql-cst": "^0.17.4",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "prettier-plugin-toml": "^2.0.6",
    "sass": "^1.97.2",
    "tailwindcss": "^3.4.19",
    "typescript": "^5.9.3",
    "vite-svg-loader": "^5.1.0",
    "vue-component-type-helpers": "^3.2.2",
    "vue-tsc": "^2.2.12",
    "wrangler": "^4.59.2"
  },
  "dependencies": {
    "@formatjs/intl-localematcher": "^0.5.10",
    "@intercom/messenger-js-sdk": "^0.0.14",
    "@ltd/j-toml": "^1.38.0",
    "@modrinth/assets": "workspace:*",
    "@modrinth/ui": "workspace:*",
    "@modrinth/utils": "workspace:*",
    "@orama/orama": "^3.1.18",
    "@orama/plugin-data-persistence": "^3.1.18",
    "@pinia/nuxt": "^0.11.3",
    "@tanstack/vue-query": "^5.92.7",
    "@vitejs/plugin-vue": "^6.0.3",
    "@vue-email/components": "^0.0.21",
    "@vue-email/render": "^0.0.9",
    "@vueuse/core": "^11.3.0",
    "ansi-to-html": "^0.7.2",
    "dayjs": "^1.11.19",
    "dompurify": "^3.3.1",
    "floating-vue": "^5.2.2",
    "highlight.js": "^11.11.1",
    "intl-messageformat": "^10.7.18",
    "iso-3166-2": "1.0.0",
    "js-yaml": "^4.1.1",
    "jszip": "^3.10.1",
    "markdown-it": "14.1.0",
    "pathe": "^1.1.2",
    "pinia": "^3.0.4",
    "pinia-plugin-persistedstate": "^4.7.1",
    "prettier": "^3.8.0",
    "qrcode.vue": "^3.6.0",
    "semver": "^7.7.3",
    "vue-confetti-explosion": "^1.0.2",
    "vue-typed-virtual-list": "^1.0.10",
    "xss": "^1.0.15"
  },
  "web-types": "../../web-types.json",
  "prettier": "@modrinth/tooling-config/frontend.prettier.config.cjs",
  "patchedDependencies": {
    "dpack@0.6.22": "patches/dpack@0.6.22.patch",
    "@orama/plugin-data-persistence@3.1.18": "patches/@orama%2Fplugin-data-persistence@3.1.18.patch"
  }
}
